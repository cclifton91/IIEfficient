---
import { getCollection } from "astro:content"

const projects = await getCollection("projects")

const featuredProjects = projects.filter((project) => project.data.featured)
---

<section class="container px-4 mx-auto py-20">
	<div class="flex flex-wrap -m-8">
		<div class="w-full md:w-1/2 p-8">
			<div class="max-w-md">
				<h2 class="font-headings font-bold text-red-400 mb-8 text-8xl uppercase">Featured Projects</h2>
				<h3 class="font-headings mb-3 text-2xl font-bold text-red-400 uppercase text-left">A look at our favorite projects</h3>
			</div>
		</div>
		<div class="w-full md:w-1/2">
			<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
				{
					featuredProjects.length > 0 && (
						<div class="md:col-span-2 bg-neutral-800 rounded overflow-hidden group relative">
							<a href={`/projects/${featuredProjects[0].data.slug}`}>
								<div class="w-full h-64">
									{" "}
									{/* Larger image height */}
									{featuredProjects[0].data.coverImg && <img src={featuredProjects[0].data.coverImg.src} alt={featuredProjects[0].data.coverAlt} class="w-full h-full object-cover absolute inset-0" />}
								</div>
								<div class="p-4 relative z-10">
									{featuredProjects[0].data.tag && featuredProjects[0].data.tag.length > 0 && <p class="text-sm uppercase tracking-wide text-gray-400">{featuredProjects[0].data.tag[0]}</p>}
									<h3 class="text-lg text-white font-semibold">{featuredProjects[0].data.title}</h3>
								</div>
								<div class="absolute inset-0 bg-black/50 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300 group-hover:scale-105">
									<span class="text-sm font-medium border border-white px-3 py-1 text-white">View Project</span>
								</div>
							</a>
						</div>
					)
				}

				{
					featuredProjects.slice(1, 3).map((project) => (
						<div class="bg-neutral-800 rounded overflow-hidden group relative">
							<a href={`/projects/${project.data.slug}`}>
								<div class="w-full h-48">
									{" "}
									{/* Smaller image height */}
									{project.data.coverImg && <img src={project.data.coverImg.src} alt={project.data.coverAlt} class="w-full h-full object-cover absolute inset-0" />}
								</div>
								<div class="p-4 relative z-10">
									{project.data.tag && project.data.tag.length > 0 && <p class="text-sm uppercase tracking-wide text-gray-400">{project.data.tag[0]}</p>}
									<h3 class="text-lg text-white font-semibold">{project.data.title}</h3>
								</div>
								<div class="absolute inset-0 bg-black/50 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300 group-hover:scale-105">
									<span class="text-sm font-medium border border-white px-3 py-1 text-white">View Project</span>
								</div>
							</a>
						</div>
					))
				}
			</div>
		</div>
	</div>
</section>
