---
import { getCollection } from "astro:content"

// get all projects
const projects = await getCollection("projects")

//get featured projects
const featuredProjects = projects.filter((project) => project.data.featured === true)
---

<section class="container px-4 mx-auto py-20">
	<div class="flex flex-wrap -m-8">
		<div class="w-full md:w-1/2 p-8">
			<div class="md:max-w-md">
				<h2 class="font-headings font-bold text-red-400 mb-8 text-8xl uppercase">Featured Projects</h2>
				<p class="font-body text-gray-400 font-medium">A closer look at some of our projects</p>
			</div>
		</div>
		<div class="w-full md:w-1/2">
			<!-- Projects Here -->
			<div class="md:col-span-3 grid grid-cols-1 md:grid-cols-2 gap-6">
				{
					featuredProjects.length > 0 && (
          <div class="col-span-1 md:col-span-2 bg-neutral-800 rounded overflow-hidden group relative">
						<a href={`/projects/${featuredProjects[0].slug}`}>
	            <!-- Image wrapper -->
	            <div class="w-full h-64">
                {featuredProjects[0].data.coverImg && (
                  <img src={featuredProjects[0].data.coverImg.src} alt={featuredProjects[0].data.coverImg.alt} class="w-full h-full object-cover absolute inset-0" />
                )}
	            </div>
	            <!-- Text content -->
	            <div class="p-4 relative z-10">
	              <p class="text-sm uppercase tracking-wide text-gray-400">
	                {featuredProjects[0].data.tag.length > 0 ? (featuredProjects[0].data.tag[0]) : ""}
	              </p>
	              <h3 class="text-lg text-white font-semibold">{featuredProjects[0].data.title}</h3>
	            </div>

	            <!-- Hover overlay -->
	            <div class="absolute inset-0 bg-black/50 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300 group-hover:scale-105">
	              <span class="text-sm font-medium border border-white px-3 py-1 text-white">View Project</span>
	            </div>
							</a>
          </div>
					)
				}

				{/* Display the next two featured projects in the smaller grid items */}
				{
					featuredProjects.slice(1, 3).map((project) => (
						<div class="bg-neutral-800 rounded overflow-hidden group relative">
							<a href={`/projects/${project.slug}`}>
	              <!-- Image wrapper -->
	              <div class="w-full h-48">
                  {project.data.coverImg && (
                    <img src={project.data.coverImg.src} alt={project.data.coverImg.alt} class="w-full h-full object-cover absolute inset-0" />
                  )}
	              </div>
	              <!-- Text Content -->
								<div class="p-4 relative z-10">
									<p class="text-sm uppercase tracking-wide text-gray-400">
	                  {project.data.tag.length > 0 ? (project.data.tag[0]) : ""}
	                </p>
									<h3 class="text-lg text-white font-semibold">{project.data.title}</h3>
								</div>
	              <!-- Hover Overlay -->
								<div class="absolute inset-0 bg-black/50 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300 group-hover:scale-105">
									<span class="text-sm font-medium border border-white px-3 py-1 text-white">View Project</span>
								</div>
							</a>
						</div>
					))
				}
			</div>
		</div>
	</div>
</section>
