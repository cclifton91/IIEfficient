---
import social from "../data/social.json"
import settings from "../data/settings.json"
import ContactPhoto from "../assets/videoman.jpg"
import { Icon } from "astro-icon/components"
---

<section class="overflow-hidden py-20" id="contact">
	<div class="container px-4 mx-auto">
		<div class="flex flex-wrap py-16">
			<div class="w-full md:w-6/12 p-8">
				<h2 class="font-headings font-bold text-red-400 mb-8 text-6xl md:text-8xl uppercase">Contact</h2>
				<h3 class="font-headings mb-3 text-2xl md:text-3xl font-bold text-red-400 uppercase text-left">We'd love to hear from you.</h3>
			</div>
			<div class="w-full md:w-1/2 p-8">
				<div class="flex flex-wrap">
					<div class="w-full md:w-1/2 mb-4 sm:p-6">
						<div class="max-w-xs text-left md:mx-auto">
							<h6 class="font-headings mb-3 text-xl font-bold text-red-400">Address</h6>
							<p class="text-xl text-gray-400 font-medium">{settings.address}</p>
						</div>
					</div>
					<div class="w-full md:w-1/2 mb-4 sm:p-6">
						<div class="max-w-xs text-left md:mx-auto">
							<h6 class="font-headings mb-3 text-xl font-bold text-red-400">Email</h6>
							<p class="text-xl text-gray-400 font-medium"><a href="mailto:{settings.email}" class="text-gray-400 hover:text-blue-400">{settings.email}</a></p>
						</div>
					</div>
					<div class="w-full md:w-1/2 mb-4 sm:p-6">
						<div class="max-w-xs text-left md:mx-auto">
							<h6 class="font-headings mb-3 text-xl font-bold text-red-400">Phone</h6>
							<p class="text-xl text-gray-400 font-medium"><a href="tel:{settings.phone}" class="text-gray-400 hover:text-blue-400">{settings.phone}</a></p>
						</div>
					</div>
					<div class="w-full md:w-1/2 md-4 sm:p-6">
						<div class="max-w-xs text-left md:mx-auto">
							<h6 class="font-headings mb-3 text-xl font-bold text-red-400">Socials</h6>
							<div class="flex justify-start items-center">
								<a href={social.facebook}><Icon name="facebook(24x)" class="h-10 w-10 mr-4" /></a>
								<a href={social.instagram}><Icon name="instagram(24x)" class="h-10 w-10 mr-4" /></a>
								<a href={social.tiktok}><Icon name="tiktok(24x)" class="h-10 w-10" /></a>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="h-auto w-full md:h-96">
				<img src={ContactPhoto.src} alt="" class="rounded-xl w-full h-full object-cover" />
			</div>
		</div>
	</div>
</section>
